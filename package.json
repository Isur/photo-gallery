{
  "name": "photo-gallery",
  "version": "1.0.0",
  "description": "Photo gallery created on my own boilerplate.",
  "repository": "https://github.com/Isur/photo-gallery.git",
  "author": "Isur",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "predev": "npm run linter-fix & rm -rf dist/",
    "dev": "npm run dev:server & npm run dev:client",
    "dev:server": "NODE_ENV=development webpack --config ./webpack/webpack.config.server.babel.js",
    "dev:server-start": "NODE_ENV=development nodemon dist/server.bundle.js",
    "dev:client": "webpack-dev-server --config ./webpack/webpack.config.dev.babel.js",
    "linter": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx --ignore-path .gitignore ./src",
    "typecheck": "tsc --noEmit",
    "linter-fix": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx --color --ignore-path .gitignore ./src --fix",
    "prebuild": "eslint --max-warnings 0 --ext .js --ext .jsx --ext .ts --ext .tsx --ignore-path .gitignore ./src",
    "build": "npm run build:clean && npm run build:server && npm run build:client",
    "build:clean": "rm -rf build/",
    "build:server": "webpack --config ./webpack/webpack.config.server.babel.js",
    "build:client": "webpack --config ./webpack/webpack.config.prod.babel.js",
    "start": "node ./build/server.bundle.js"
  },
  "keywords": [
    "webpack",
    "typescript",
    "node",
    "react",
    "babel",
    "express",
    "sass",
    "semanticui",
    "eslint",
    "photo",
    "gallery",
  ],
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "sass-loader": "^7.1.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
